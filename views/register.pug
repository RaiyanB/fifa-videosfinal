extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.text-center.mb-4 Register

        if error
          .alert.alert-danger= error
        if message
          .alert.alert-success= message

        form(action="/auth/register" method="POST")
          .mb-3
            label.form-label(for="name") Name
            input#name.form-control(type="text", name="name", required)

          .mb-3
            label.form-label(for="email") Email
            input#email.form-control(type="email", name="email", required)

          .mb-3
            label.form-label(for="password") Password
            input#password.form-control(type="password", name="password", required)

          button.btn.btn-primary.w-100(type="submit") Register

        p.text-center.mt-3
          | Already have an account?
          a(href="/auth/login") Login here
